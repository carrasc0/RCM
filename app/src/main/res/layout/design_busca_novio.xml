<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   app:cardElevation="4dp"
                                   app:cardUseCompatPadding="true"
                                   app:cardCornerRadius="2dp"
                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="0dp" android:layout_height="300dp"
                   android:background="@color/colorPrimary"
                   android:id="@+id/novioIM"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/novioTitleTV"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="Lazzy"
                  android:maxLines="1"
                  android:textSize="18sp"
                  android:paddingTop="12dp"
                  android:textStyle="bold"
                  android:paddingStart="12dp"
                  android:paddingEnd="12dp"
                  android:paddingBottom="4dp"
                  app:layout_constraintTop_toBottomOf="@+id/novioIM"
                  android:id="@+id/novioTitleTV"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/novioTitleTV"
                  android:text="Descripcion"
                  android:paddingBottom="12dp"
                  android:maxLines="2"
                  android:textSize="14sp"
                  android:ellipsize="end"
                  android:paddingStart="12dp"
                  android:paddingEnd="12dp"
                  android:id="@+id/novioDescpTV"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>